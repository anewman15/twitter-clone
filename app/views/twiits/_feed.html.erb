<div class="column is-half">
  <%= render 'form' %>
  <% @twiits.each do | twiit | %>
    <div class="box">
      <article class="media">
        <div class="media-left">
          <figure class="image is64x64">
            <img src="https://bulma.io/images/placeholders/64x64.png">
          </figure>
        </div>
        <div class="media-content">
          <div class="content">
            <strong><%= twiit.user ? twiit.user.name : "Someone twiited:" %></strong><br>
            <small><%=  twiit.user ? "@#{twiit.user.username}" : "user no longer here" %></small><br><br>
            <p><%= twiit.twiit %></p><br>
          </div>
          <nav class="level">
            <div class="level-left is-mobile">
              <%= link_to twiit, class: "level-item" do %>
                <span class="icon"><i class="fas fa-link" aria-hidden="true"></i></span>
              <% end %>
              <% if twiit.user && twiit.user == current_user %>
                <%= link_to edit_twiit_path(twiit[:id]), class: "level-item" do %>
                  <span class="icon"><i class="fas fa-pencil-alt" aria-hidden="true"></i></span>
                <% end %>
                <%= link_to  twiit, method: :delete, data: {  confirm: "Are you sure you want to delete this twiit?" } do %>
                <span class="icon"><i class="fas fa-trash-alt" aria-hidden="true"></i></span>
                <% end %>
              <% end %>
            </div>
          </nav>
        </div>
      </article>
    </div>
  <% end %>
</div>