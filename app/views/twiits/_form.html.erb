<%= simple_form_for @twiit do |f| %>
  <%= f.error_notification %>
  <div class="field">
    <div class="control">
      <%= f.input :twiit, label: 'Twiit about it', input_html: {class: "textarea"}, wrapper: false, label_html: { class: "label"}, placeholder: "Compose a new twiit" %>

    </div>
  </div>
  <%= f.button :submit, class: "button is-info"%>
<% end %>