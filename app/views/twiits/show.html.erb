<p id="notice"><%= notice %></p>
<div class="section">
  <div class="container">
    <div class="column is-centered">
      <article class="media">
        <div class="media-left">
          <figure class="image is64x64">
            <img src="https://bulma.io/images/placeholders/64x64.png">
          </figure>
        </div>
        <div class="media-content">
          <div class="content">
            <strong><%= @twiit.user ? "#{@twiit.user.name} twiitted:" : "Someone twiitted:" %></strong><br>
            <small><%=  @twiit.user ? "@#{@twiit.user.username}" : "user no longer here" %></small><br><br>
            <p><%= @twiit.twiit %></p><br>
          </div>
          <nav class="level">
            <div class="level-left is-mobile">
              <% if @twiit.user && @twiit.user == current_user %>
                <%= link_to edit_twiit_path(@twiit), class: "level-item" do %>
                  <span class="icon"><i class="fas fa-pencil-alt" aria-hidden="true"></i></span>
                <% end %>
                <%= link_to  @twiit, method: :delete, data: {  confirm: "Are you sure you want to delete this twiit?" } do %>
                <span class="icon"><i class="fas fa-trash-alt" aria-hidden="true"></i></span>
                <% end %>
              <% end %>
            </div>
          </nav>
        </div>
      </article>
      <%= link_to 'Back', twiits_path %>
    </div>
  </div>
</div>
